<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.subscribe-trakt-exodus" name="Exodus subscriber" version="1.0.0" provider-name="earithramir">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
    <import addon="script.trakt" version="3.0.2"/>
    <import addon="plugin.video.exodus" version="2.0.10"/>
  </requires>
    <extension point="kodi.context.item" library="addon.py">		
      <item>
        <label>32000</label>
        <visible>StringCompare(ListItem.dbtype,movie) | StringCompare(ListItem.dbtype,tvshow) | StringCompare(ListItem.dbtype,season) | StringCompare(ListItem.dbtype,episode)</visible>
      </item>
    </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Uses trakt plugin to subscribe and Exodus to view</summary>
    <description lang="en">This plugin will run a backgroundtask to create .strm files for your library. This way you will be able to use Kodi's internal TV shows and Movies library to view Exodus shows and movies. Like the good old days with Genesis :)</description>
    <platform>all</platform>
    <forum></forum>
    <source>https://github.com/Razzeee/context.trakt.contextmenu/</source>
  </extension>
</addon>
